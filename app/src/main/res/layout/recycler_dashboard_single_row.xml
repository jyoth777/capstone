<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llContent">


<!--    centercrop makes sures the image fits in the center of the view -->

    <TextView
        android:id="@+id/txtEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"

        android:padding="10dp"
        android:text="List Item"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtVenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEvent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"

        android:text="Name of the Author" />

    <TextView
        android:id="@+id/txtEventDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVenue"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"

        android:text="Name of the Author" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEventDesc"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"

        android:text="Name of the Author" />
    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDate"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"

        android:text="Name of the Author" />

    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLocation"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"

        android:text="Name of the Author" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDistance"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="Rs.299"

        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgstar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/txtEvent"
        android:src="@drawable/ic_favourite"

        />



</RelativeLayout>

</androidx.cardview.widget.CardView>